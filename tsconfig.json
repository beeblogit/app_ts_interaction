{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "noUnusedLocals": true,
        "outDir": ".build",
        "sourceMap": true,
        "target": "es6",
        "declaration": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "pretty": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "dist",
        "prisma",
        "docs",
        "prettierrc.js",
        "jest.config.js",
        "node_modules"
      ]
}